{
  "manifest_version": 2,
  "name": "Perricornios - Appbuelito",
  "version": "1.0",
  "author": "Perricornios Co.",
  "description": "Extension para la seguridad de la gente mayor.",
  "permissions": ["tabs"],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["popup.js"]
    }
  ]
}
